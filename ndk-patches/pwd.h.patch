+static void android_setup_pwd(struct passwd* pw) {
+	pw->pw_shell = "/bin/sh";
+	pw->pw_dir = "/home";
+	pw->pw_passwd = "*";
+#ifdef __LP64__
+	pw->pw_gecos = ""; /* Avoid NULL field. */
